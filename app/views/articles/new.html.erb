<h1>Create New Article</h1>

<%= form_for @article do |form| %>
	<ul>
		<% @article.errors.full_messages.each do |error| %>
		<li><%= error %></li>
		<% end %>
	</ul>
	<p>
		<%= form.label :title %><br />
		<%= form.text_field :title %>
	</p>
	<p>
		<%= form.label :body %><br />
		<%= form.text_area :body %>
	</p>
	<p>
		<%= form.submit "Create Article" %>
	</p>
	<% end %>
